@model CooperativeAccounting.Models.Entities.Welfare
@{
    Layout = "_Layout";
}

@section Css
{
    <link rel="stylesheet" href="~/Dashboard/plugins/bower_components/html5-editor/bootstrap-wysihtml5.css"/>
}

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Manage Welfare(s)</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li>
                <a href="#">Welfares</a>
            </li>
            <li>
                <a href="#">Add Welfares</a>
            </li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title m-b-0">Add Welfares</h3>
            <p class="text-muted m-b-30 font-13">Create Welfare</p>
            @using (Html.BeginForm("Create", "Welfare", FormMethod.Post, new {enctype = "multipart/form-data", role = "form"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                if (Model.Member)
                 {
                     <div class="form-group row">
                         @Html.LabelFor(model => model.AppUserId, new {@class = "col-2 col-form-label"})
                         <div class="col-10">
                             @Html.DropDownListFor(model => model.AppUserId,null,"Select Member", new {@class = "form-control", placeholder = "Please enter the Minute Title"})
                             @Html.ValidationMessageFor(model => model.AppUserId, "", new {@class = "text-danger"})
                         </div>
                     </div>
                }
                else
                {
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Owner, new {@class = "col-2 col-form-label"})
                        <div class="col-10">
                            @Html.EditorFor(model => model.Owner, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the Welfare Owners Name"}})
                            @Html.ValidationMessageFor(model => model.Owner, "", new {@class = "text-danger"})
                        </div>
                    </div>
                }

          
                <div class="form-group row">
                    @Html.LabelFor(model => model.Reason, new {@class = "col-2 col-form-label"})
                    <div class="col-10">
                        @Html.TextAreaFor(model => model.Reason, new {@class = "form-control", placeholder = "Please enter the Minute", id = "mymce"})
                        @Html.ValidationMessageFor(model => model.Reason, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Amount, new {@class = "col-2 col-form-label"})
                    <div class="col-10">
                        @Html.EditorFor(model => model.Amount, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the Welfare Amount"}})
                        @Html.ValidationMessageFor(model => model.Amount, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.StartDate, new {@class = "col-2 col-form-label"})
                    <div class="col-10">
                        @*<input type="text" name="Date" class="form-control mydatepicker" placeholder="mm/dd/yyyy">*@
                        @Html.TextBoxFor(model => model.StartDate, new {@class = "form-control mydatepicker", placeholder = "Please select the Start Date"})
                        @Html.ValidationMessageFor(model => model.StartDate, "", new {@class = "text-danger"})
                    </div>

                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Duration, new {@class = "col-2 col-form-label"})
                    <div class="col-10">
                        @Html.EditorFor(model => model.Duration, new {htmlAttributes = new {@class = "form-control", placeholder = "Please enter the Welfare Duration"}})
                        @Html.ValidationMessageFor(model => model.Duration, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.TerminalDate, new {@class = "col-2 col-form-label"})
                    <div class="col-10">
                        @*<input type="text" name="Date" class="form-control mydatepicker" placeholder="mm/dd/yyyy">*@
                        @Html.TextBoxFor(model => model.TerminalDate, new {@class = "form-control mydatepicker", placeholder = "Please select the Terminal Date"})
                        @Html.ValidationMessageFor(model => model.TerminalDate, "", new {@class = "text-danger"})
                    </div>

                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="@Url.Action("Index", "TransactionType")" class="btn btn-default">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>

@section Functions
{
    <script src="~/Dashboard/plugins/bower_components/tinymce/tinymce.min.js"></script>
    <script>
        $(document).ready(function() {
            if ($("#mymce").length > 0) {
                tinymce.init({
                    selector: "textarea#mymce",
                    theme: "modern",
                    height: 300,
                    plugins: [
                        "advlist autolink link image lists charmap print preview hr anchor pagebreak spellchecker",
                        "searchreplace wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking",
                        "save table contextmenu directionality emoticons template paste textcolor"
                    ],
                    toolbar:
                        "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | l      ink image | print preview media fullpage | forecolor backcolor emoticons",
                });
            }
        });
    </script>
    <!--Style Switcher -->
    <script src="../plugins/bower_components/styleswitcher/jQuery.style.switcher.js"></script>
}